@model IEnumerable<MVCPubs.Models.Store>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" asp-controller="Store">Añadir una tienda al sistema.</a>

<div>
    <form asp-action="StoreByCity">
        Filtrar por ciudad<input type="text" name="city"/>
        <input type="submit" value="Buscar" class="btn"/>
    </form>
</div>

<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.StorName)</th>
            <th>@Html.DisplayNameFor(model => model.StorAddress)</th>
            <th>@Html.DisplayNameFor(model => model.City)</th>
            <th>@Html.DisplayNameFor(model => model.State)</th>
            <th>@Html.DisplayNameFor(model => model.Zip)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.StorName)</td>
                <td>@Html.DisplayFor(modelItem => item.StorAddress)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.State)</td>
                <td>@Html.DisplayFor(modelItem => item.Zip)</td>
                <td>
                    <a asp-action="Details" asp-controller="Store" asp-route-id="@item.StorId">Ver detalles</a>
                    <a asp-action="Modify" asp-controller="Store" asp-route-id="@item.StorId">Modificar tienda</a>
                    <a asp-action="Delete" asp-controller="Store" asp-route-id="@item.StorId">Borrar tienda</a>
                </td>
            </tr>
        }
    </tbody>
</table>